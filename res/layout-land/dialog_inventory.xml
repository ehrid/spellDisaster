<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/diary_width"
    android:layout_height="@dimen/diary_height" >

    <ImageView
        android:layout_width="@dimen/inventory_hero_width"
        android:layout_height="@dimen/inventory_hero_height"
        android:layout_marginLeft="@dimen/inventory_hero_margin_left"
        android:src="@drawable/inventory_hero" />
    
    <include
        android:id="@+id/inventory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/inventory_container" />
    

</RelativeLayout>