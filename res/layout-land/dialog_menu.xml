<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <Button
        android:id="@+id/menu_inventory"
        android:layout_width="@dimen/menu_button_width"
        android:layout_height="@dimen/menu_button_height"
        android:layout_margin="@dimen/menu_button_margins"
        android:background="@drawable/style_menu_button"
        android:textColor="@color/text_white"
        android:textSize="@dimen/menu_button_text_size"
        android:text="@string/menu_inventory" />

    <Button
        android:id="@+id/menu_diary"
        android:layout_width="@dimen/menu_button_width"
        android:layout_height="@dimen/menu_button_height"
        android:layout_margin="@dimen/menu_button_margins"
        android:background="@drawable/style_menu_button"
        android:textColor="@color/text_white"
        android:textSize="@dimen/menu_button_text_size"
        android:text="@string/menu_diary" />

    <Button
        android:id="@+id/menu_settings"
        android:layout_width="@dimen/menu_button_width"
        android:layout_height="@dimen/menu_button_height"
        android:layout_margin="@dimen/menu_button_margins"
        android:background="@drawable/style_menu_button"
        android:textColor="@color/text_white"
        android:textSize="@dimen/menu_button_text_size"
        android:fontFamily=""
        android:text="@string/menu_settings" />

    <Button
        android:id="@+id/menu_exit"
        android:layout_width="@dimen/menu_button_width"
        android:layout_height="@dimen/menu_button_height"
        android:layout_margin="@dimen/menu_button_margins"
        android:background="@drawable/style_menu_button"
        android:textColor="@color/text_white"
        android:textSize="@dimen/menu_button_text_size"
        android:text="@string/menu_exit" />

</LinearLayout>