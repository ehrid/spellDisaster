<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_game_mock" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/background_gradient" />

    <ImageView
        android:id="@+id/button_settings"
        android:layout_width="@dimen/interface_button_size"
        android:layout_height="@dimen/interface_button_size"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/button_settings" />

    <ImageView
        android:id="@+id/button_fight"
        android:layout_width="@dimen/interface_button_size"
        android:layout_height="@dimen/interface_button_size"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/button_settings"
        android:src="@drawable/button_fight" />

    <ImageView
        android:id="@+id/button_action1"
        android:layout_width="@dimen/interface_button_size"
        android:layout_height="@dimen/interface_button_size"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/interface_margin_small"
        android:src="@drawable/blank" />

    <ImageView
        android:id="@+id/button_action2"
        android:layout_width="@dimen/interface_button_size"
        android:layout_height="@dimen/interface_button_size"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/button_action1"
        android:layout_marginTop="@dimen/interface_margin_small"
        android:src="@drawable/blank" />

    <ImageView
        android:id="@+id/button_action3"
        android:layout_width="@dimen/interface_button_size"
        android:layout_height="@dimen/interface_button_size"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/button_action2"
        android:layout_marginTop="@dimen/interface_margin_small"
        android:src="@drawable/blank" />

    <ImageView
        android:id="@+id/button_action4"
        android:layout_width="@dimen/interface_button_size"
        android:layout_height="@dimen/interface_button_size"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/button_action3"
        android:layout_marginTop="@dimen/interface_margin_small"
        android:src="@drawable/blank" />

    <ImageView
        android:id="@+id/controller_left"
        android:layout_width="@dimen/interface_button_size"
        android:layout_height="@dimen/interface_button_size"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="@dimen/interface_button_margin_small"
        android:src="@drawable/controller_arrow_left" />

    <ImageView
        android:id="@+id/controller_middle"
        android:layout_width="@dimen/interface_button_size"
        android:layout_height="@dimen/interface_button_size"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="@dimen/interface_button_margin_small"
        android:layout_marginLeft="@dimen/interface_button_margin_small"
        android:src="@drawable/blank" />

    <ImageView
        android:id="@+id/controller_right"
        android:layout_width="@dimen/interface_button_size"
        android:layout_height="@dimen/interface_button_size"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="@dimen/interface_button_margin_small"
        android:layout_marginLeft="@dimen/interface_button_margin_big"
        android:src="@drawable/controller_arrow_right" />

    <ImageView
        android:id="@+id/controller_down"
        android:layout_width="@dimen/interface_button_size"
        android:layout_height="@dimen/interface_button_size"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/interface_button_margin_small"
        android:src="@drawable/controller_arrow_down" />

    <ImageView
        android:id="@+id/controller_up"
        android:layout_width="@dimen/interface_button_size"
        android:layout_height="@dimen/interface_button_size"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="@dimen/interface_button_margin_big"
        android:layout_marginLeft="@dimen/interface_button_margin_small"
        android:src="@drawable/controller_arrow_up" />

    <ImageView
        android:id="@+id/controller_secondary_left"
        android:layout_width="@dimen/interface_button_size"
        android:layout_height="@dimen/interface_button_size"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/interface_button_margin_small"
        android:layout_marginRight="@dimen/interface_button_margin_big"
        android:src="@drawable/controller_arrow_left" />

    <ImageView
        android:id="@+id/controller_secondary_middle"
        android:layout_width="@dimen/interface_button_size"
        android:layout_height="@dimen/interface_button_size"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/interface_button_margin_small"
        android:layout_marginRight="@dimen/interface_button_margin_small"
        android:src="@drawable/blank" />

    <ImageView
        android:id="@+id/controller_secondary_right"
        android:layout_width="@dimen/interface_button_size"
        android:layout_height="@dimen/interface_button_size"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/interface_button_margin_small"
        android:src="@drawable/controller_arrow_right" />

    <ImageView
        android:id="@+id/controller_secondary_down"
        android:layout_width="@dimen/interface_button_size"
        android:layout_height="@dimen/interface_button_size"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/interface_button_margin_small"
        android:src="@drawable/controller_arrow_down" />

    <ImageView
        android:id="@+id/controller_secondary_up"
        android:layout_width="@dimen/interface_button_size"
        android:layout_height="@dimen/interface_button_size"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/interface_button_margin_big"
        android:layout_marginRight="@dimen/interface_button_margin_small"
        android:src="@drawable/controller_arrow_up" />

</RelativeLayout>