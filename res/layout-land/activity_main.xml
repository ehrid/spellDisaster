<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/background_game_mock" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/background_gradient" />

    <ImageView
        android:id="@+id/button_settings"
        android:layout_width="@dimen/interface_button_size"
        android:layout_height="@dimen/interface_button_size"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/button_settings" />

    <ImageView
        android:id="@+id/button_fight"
        android:layout_width="@dimen/interface_button_size"
        android:layout_height="@dimen/interface_button_size"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/button_settings"
        android:src="@drawable/button_fight" />

    <include
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            layout="@layout/interface_actionbuttons" />

    <include
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            layout="@layout/interface_leftcontroller" />

    <include
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            layout="@layout/interface_rightcontroller" />

</RelativeLayout>